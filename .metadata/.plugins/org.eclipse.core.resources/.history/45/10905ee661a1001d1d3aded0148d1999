
public class Main {

	public static void main(String[] args) {
		
		Main.PTB2(3,10,5);
		Main m = new Main();
		int n = 5;
		long kq = m.GT(n);
		System.out.print("Giai thua cua %d la %l",n,kq);
	}
	
	static void PTB2(float a, float b, float c) {
		double delta = Math.pow(b, 2) - 4 * a *c;
		if (delta < 0) {
			System.out.print("Vo nghiem");
		}
		else if (delta == 0) {
			double x = -b/2*a;
		}
		else {
			double x1 = (-b - Math.sqrt(delta))/2*a;
			double x2 = (-b + Math.sqrt(delta))/2*a;
			System.out.print("Phuong trinh co 2 nghiem: x1 = " + x1 +", x2 = " + x2);
		}
	}
	
	long GT(int n) {
		long s = 1;
		for(int i = 1;i<=n;i++)
			s *=i;
		return s;
	}
}
